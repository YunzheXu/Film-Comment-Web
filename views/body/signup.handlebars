  <body>

    <div class="container">

      <form class="form-signin" action="/signup" method="post">
        <h2 class="form-signin-heading">Please sign up</h2>
        <label for="inputUsername" class="sr-only">Username</label>
        <input name="username" type="username" id="inputUsername" class="form-control" placeholder="Type In Username" required autofocus>
        <label for="inputPassword" class="sr-only">Password</label>
        <input name="password1" type="password1" id="inputPassword1" class="form-control" placeholder="Type In Password" required>
        <input name="password2" type="password2" id="inputPassword2" class="form-control" placeholder="Type In Password Again" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
      </form>

    </div> 


  </body>

